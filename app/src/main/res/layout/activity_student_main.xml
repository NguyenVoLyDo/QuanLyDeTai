<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xin chào, Sinh viên"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp"/>

    <Button
        android:id="@+id/btnThongBao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông báo" />

    <Button
        android:id="@+id/btnDangKyDeTai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng ký đề tài" />

    <Button
        android:id="@+id/btnDanhSachDeTai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách đề tài" />

    <Button
        android:id="@+id/btnBaoCao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Báo cáo" />

    <Button
        android:id="@+id/btnKetQua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kết quả" />

</LinearLayout>